{
  "extends": "airbnb-base",
  "rules": {
    "no-await-in-loop": "off",
    "no-restricted-syntax": "off",
    "no-use-before-define": "off",
    "no-param-reassign": "off",
    "linebreak-style": 0,
    "no-underscore-dangle": "off",
    "max-len": [2, 120],
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "always",
        "exports": "always",
        "functions": "never"
      }
    ],
    "class-methods-use-this": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": {
          "minProperties": 6,
          "multiline": true,
          "consistent": true
        },
        "ObjectPattern": {
          "minProperties": 6,
          "multiline": true,
          "consistent": true
        },
        "ImportDeclaration": {
          "minProperties": 6,
          "multiline": true,
          "consistent": true
        },
        "ExportDeclaration": {
          "minProperties": 6,
          "multiline": true,
          "consistent": true
        }
      }
    ]
  }
}
